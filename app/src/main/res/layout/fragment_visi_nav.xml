<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@color/white">

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/light_green_100" />

    <View
        android:id="@+id/left_line"
        android:layout_width="0.5dp"
        android:layout_height="102dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/light_green_100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageButton1"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:src="@mipmap/btn_1_nor" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="景点"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_border_line_mian" />

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:src="@mipmap/btn_2_nor" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="美食"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relId3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_border_line_mian" />

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:src="@mipmap/btn_3_nor" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="目的地"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relId4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_border_line_mian" />

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:src="@mipmap/btn_4_nor" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton4"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="购物"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="102dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/light_green_100" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_menu_bg" />

</RelativeLayout>