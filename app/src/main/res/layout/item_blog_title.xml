<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_more"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/green_50"
    android:paddingLeft="@dimen/dimen_8"
    android:paddingRight="@dimen/dimen_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvCategoryImage"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginTop="2dp"
            android:background="@drawable/img_line_dl" />

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginTop="2dp"
            android:text="热门博客"
            android:textColor="@color/font_color_black"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCategoryMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/category_title_more"
        android:textColor="@color/black_alpha_80"
        android:textSize="14sp" />
</RelativeLayout>